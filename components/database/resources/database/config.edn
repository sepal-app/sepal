{:jdbcUrl #profile {:default #or [#env DATABASE_JDBC_URL "jdbc:sqlite:/tmp/sepal.db"]
                    :test "jdbc:sqlite::memory:"}

 ;; SQLite-specific pragmas
 ;; CRITICAL: Enable foreign key constraints (off by default in SQLite)
 :foreign_keys true

 ;; Additional SQLite connection parameters (optional)
 :journal_mode "WAL"  ;; Write-Ahead Logging for better concurrency
 ;; :synchronous "NORMAL"  ;; Balance between safety and speed
 ;; :cache_size -64000  ;; Cache size in KiB (negative value = KiB, positive = pages)
 }
